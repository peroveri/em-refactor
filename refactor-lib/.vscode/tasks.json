{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo check",
            "type": "shell",
            "command": "cargo check",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "cargo test1",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test --ignored",
            "type": "shell",
            "command": "cargo testi",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test cli",
            "type": "shell",
            "command": "cargo test1 cli",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test box field",
            "type": "shell",
            "command": "cargo test1 box_",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test extract-block",
            "type": "shell",
            "command": "cargo test1 extract_block",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test inline-macro",
            "type": "shell",
            "command": "cargo test1 inline_macro",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "build binary",
            "type": "shell",
            "command": "cargo build --bins --release",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cargo build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {"isDefault": true, "kind": "build"}
        },
    ]
}