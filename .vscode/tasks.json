{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo check",
            "type": "shell",
            "command": "cargo check --bins --tests",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "cargo test1",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test --ignored",
            "type": "shell",
            "command": "cargo testi",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test cli",
            "type": "shell",
            "command": "cargo test1 cli",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test box field",
            "type": "shell",
            "command": "cargo test1 box_",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test close-over-variables",
            "type": "shell",
            "command": "cargo test1 close_over_variables",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test extract-block",
            "type": "shell",
            "command": "cargo test1 extract_block",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test inline-macro",
            "type": "shell",
            "command": "cargo test1 inline_macro",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test introduce-closure",
            "type": "shell",
            "command": "cargo test1 introduce_closure",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "test split-conflicting-match-arms",
            "type": "shell",
            "command": "cargo test1 split_conflicting_match_arms",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
        {
            "label": "build binary",
            "type": "shell",
            "command": "cargo build --bins --lib --release",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {"isDefault": true, "kind": "build"}
        },
        {
            "label": "run experiment",
            "type": "shell",
            "command": "cargo build --bins --lib && cargo run --bin refactor-experiments -- extract-method --workspace-root \"../../local/exp-dir/RustyXML\"",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
    ]
}