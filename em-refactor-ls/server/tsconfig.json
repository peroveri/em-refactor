{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"experimentalDecorators": true, //experimentalDecorators and emitDecoratorMetadata are needed for tsyringe
		"emitDecoratorMetadata": true
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
