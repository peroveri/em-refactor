{
	"name": "lsp-refactoring-sample",
	"description": "A language server refactoring example",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "test-publisher",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.33.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.isHoverEnabled": {
					"scope": "window",
					"type": "boolean",
					"default": false,
					"description": "Shows type information and macro expansion on hover."
				},
				"languageServerExample.isGenerateTestFilesEnabled": {
					"scope": "window",
					"type": "boolean",
					"default": false,
					"description": "Developer setting. Allows test files to be generated."
				},
				"languageServerExample.isUnsafeRefactoringShown": {
					"scope": "window",
					"type": "boolean",
					"default": false,
					"description": "Developer setting. Allows unsafe invocation of refactorings."
				},
				"languageServerExample.refactoringBinaryPath": {
					"scope": "window",
					"type": "string",
					"default": "",
					"description": "The path to the refactoring binary file."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test-client": "node ./client/out/test/runTest.js",
		"test-server": "cd server && npm run test",
		"vscode-package": "vsce package",
		"vscode-install": "code --install-extension lsp-refactoring-sample-1.0.0.vsix",
		"vscode-uninstall": "code --uninstall-extension lsp-refactoring-sample-1.0.0.vsix",
		"clean": "rm -rf client/out && rm -rf server/out"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"tslint": "^5.20.0",
		"typescript": "^3.7.5"
	}
}
